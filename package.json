{
  "name": "messenger",
  "version": "0.3.0",
  "description": "Messenger for practicum",
  "author": "Kosimov Anvar",
  "license": "ISC",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "clean:output": "rimraf dist .parcel-cache",
    "build": "npm run clean:output && parcel build src/index.html",
    "dev": "npm run clean:output && parcel src/index.html --port 3000 --no-cache",
    "start": "npm run build && node server.js",
    "test": "mocha -r ts-node/register -r jsdom-global/register -r ignore-styles src/**/*.spec.ts",
    "stylelint": "stylelint ./src/**/*.scss",
    "stylelint:fix": "npm run stylelint -- --fix",
    "eslint": "node_modules/.bin/eslint . --ext js,ts",
    "eslint:fix": "npm run eslint -- --fix"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "2.4.1",
    "@parcel/transformer-sass": "2.4.1",
    "@parcel/transformer-typescript-tsc": "2.4.1",
    "@parcel/transformer-webmanifest": "2.4.1",
    "@types/chai": "4.3.1",
    "@types/jsdom": "16.2.14",
    "@types/mocha": "9.1.0",
    "@types/node": "17.0.24",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "assert": "2.0.0",
    "chai": "4.3.6",
    "console-browserify": "1.2.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "express": "4.17.3",
    "ignore-styles": "5.0.1",
    "jsdom": "19.0.0",
    "jsdom-global": "3.0.2",
    "mocha": "9.2.2",
    "parcel": "2.4.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "sass": "1.50.0",
    "stylelint": "14.7.0",
    "stylelint-config-sass-guidelines": "9.0.1",
    "ts-node": "10.7.0",
    "tslib": "2.4.0",
    "typescript": "4.6.3",
    "util": "0.12.4"
  },
  "dependencies": {
    "handlebars": "4.7.7",
    "nanoid": "3.3.2"
  }
}
